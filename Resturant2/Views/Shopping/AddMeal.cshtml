@using FeedMe.Models.FoodHandler;
@{
    ViewData["Title"] = "AddMeal";
}
@model Food;




<section id="contact" class="contact" style="margin-top:70px">
    


    <div class="container" data-aos="fade-up">

        <div class="row mt-5">

            <div class="col-lg-8 mt-5 mt-lg-0">

                <form method="post" role="form" class="php-email-form">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="name" class="form-control" asp-for="Name" placeholder="Meal Name" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="number" class="form-control" name="Price" asp-for="Price" placeholder="Price" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="image" class="form-control" name="Image" asp-for="Image" placeholder="Image" required>
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" name="Description" rows="8" asp-for="Description" placeholder="Description" required></textarea>
                    </div>
                    <div class="my-3">
                    </div>
                    <div class="text-center"><button type="submit" asp-controller="Shopping" asp-action="AddMeal">Send Message</button></div>
                </form>

            </div>

        </div>

    </div>
</section><!-- End Contact Section -->
